<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.studyApp.customView.test.TestActivity">

    <com.example.studyApp.customView.test.GradientTextView
        android:id="@+id/gradient_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="你好 世界"
        android:textSize="28dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="你好 世界"
        android:textSize="28dp" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="#54D8CACA" />

    <SeekBar
        android:layout_marginTop="30dp"
        android:id="@+id/image_wight_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progress="0" />


    <SeekBar
        android:id="@+id/image_height_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:progress="0" />

    <TextView
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="切换"
        android:textSize="25dp" />
</LinearLayout>